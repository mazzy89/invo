{
  "executionRoleArn": "${execution_role_arn}",
  "family": "invo",
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "requiresCompatibilities": [
    "EC2"
  ],
  "containerDefinitions": [
    {
      "name": "invo",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "DB_ADAPTER",
          "value": "Mysql"
        },
        {
          "name": "DB_HOST",
          "value": "${db_host}"
        },
        {
          "name": "DB_USERNAME",
          "value": "${db_username}"
        },
        {
          "name": "DB_DBNAME",
          "value": "phalcon_invo"
        },
        {
          "name": "DB_CHARSET",
          "value": "utf8"
        },
        {
          "name": "VIEWS_DIR",
          "value": "themes/invo/"
        },
        {
          "name": "BASE_URI",
          "value": "/"
        }
      ],
      "secrets": [
        {
          "name": "DB_PASSWORD",
          "valueFrom": "${db_password_version_arn}"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": "true",
          "awslogs-group": "/aws/ecs/invo-${env}-app",
          "awslogs-region": "${region}",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
